<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.iko.android.weather.ui.main.weekly.adapter.DayForecastItemViewModel"/>
    </data>

    <LinearLayout
        style="@style/linear_horizontal"
        android:padding="@dimen/padding_xxsmall">

        <TextView
            style="@style/text_list_content"
            android:layout_weight="2"
            android:text="@{viewModel.weekDay}"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:srcCompat="@drawable/weather_lightning_rainy"/>

        <TextView
            style="@style/text_list_content"
            android:text="@{viewModel.maxDegree}"/>

        <TextView
            style="@style/text_list_content"
            android:text="@{viewModel.minDegree}"/>

    </LinearLayout>

</layout>