<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.iko.android.weather.ui.main.daily.DailyForecastViewModel"/>
    </data>

    <FrameLayout style="@style/view_fill_parent">

        <LinearLayout
            style="@style/view_fill_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/cardview"
                app:cardCornerRadius="@dimen/padding_small">

                <RelativeLayout style="@style/view_fill_parent">

                    <TextView
                        android:id="@+id/tv_country"
                        style="@style/text_header_bold"
                        android:layout_alignParentTop="true"
                        android:text="Bishkek, Kyrgyzstan"/>

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/text_app"
                        android:layout_below="@id/tv_country"
                        android:gravity="center"
                        android:text="SATURDAY, 18 MARCH"
                        android:textSize="@dimen/text_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@id/tv_degree"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margin_small">

                        <TextView
                            android:id="@+id/tv_max_degree"
                            style="@style/text_daily_forecast_maxmin_temperatures"
                            android:text="18&#xb0;"
                            android:drawableLeft="@drawable/menu_up_outline"/>

                        <TextView
                            android:id="@+id/tv_min_degree"
                            style="@style/text_daily_forecast_maxmin_temperatures"
                            android:text="14&#xb0;"
                            android:drawableLeft="@drawable/menu_down_outline"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_degree"
                        style="@style/text_daily_forecast_temperature"
                        android:layout_centerInParent="true"
                        android:text="16"
                        android:drawableRight="@drawable/temperature_celsius"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_degree"
                        app:srcCompat="@drawable/weather_cloudy"/>

                    <LinearLayout
                        style="@style/linear_horizontal_daily_forecast_atmosphere"
                        android:layout_above="@id/ll_title">

                        <TextView
                            style="@style/text_daily_forecast_atmosphere"
                            android:drawableLeft="@drawable/water_percent"
                            android:text="24%" />

                        <TextView
                            style="@style/text_daily_forecast_atmosphere"
                            android:drawableLeft="@drawable/flag_variant"
                            android:text="5mph"/>

                        <TextView
                            style="@style/text_daily_forecast_atmosphere"
                            android:drawableLeft="@drawable/compass_outline"
                            android:text="SW"/>

                        <TextView
                            style="@style/text_daily_forecast_atmosphere"
                            android:drawableLeft="@drawable/ic_visibility"
                            android:text="16.1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_title"
                        style="@style/linear_horizontal_daily_forecast_atmosphere"
                        android:layout_marginBottom="@dimen/margin_xxsmall"
                        android:layout_alignParentBottom="true">

                        <TextView
                            style="@style/text_daily_forecast_atmosphere_title"
                            android:text="@string/humidity"
                            android:gravity="center"/>

                        <TextView
                            style="@style/text_daily_forecast_atmosphere_title"
                            android:text="@string/wind"
                            android:gravity="center"/>

                        <TextView
                            style="@style/text_daily_forecast_atmosphere_title"
                            android:text="@string/direction"/>

                        <TextView
                            style="@style/text_daily_forecast_atmosphere_title"
                            android:text="@string/visibility"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout style="@style/linear_horizontal_daily_forecast_bottom">

                <TextView
                    style="@style/text_list_content"
                    android:text="@string/pressure"/>

                <TextView
                    style="@style/text_daily_forecast_bottom_right"
                    android:text="101.192kPa"/>

            </LinearLayout>

            <LinearLayout style="@style/linear_horizontal_daily_forecast_bottom">

                <TextView
                    style="@style/text_list_content"
                    android:text="@string/sunrise"/>

                <TextView
                    style="@style/text_daily_forecast_bottom_right"
                    android:text="05:14"/>

            </LinearLayout>

            <LinearLayout style="@style/linear_horizontal_daily_forecast_bottom">

                <TextView
                    style="@style/text_list_content"
                    android:text="@string/sunset"/>

                <TextView
                    style="@style/text_daily_forecast_bottom_right"
                    android:text="19:35"/>

            </LinearLayout>

            <LinearLayout style="@style/linear_horizontal_daily_forecast_bottom">

                <TextView
                    style="@style/text_list_content"
                    android:text="@string/uvindex"/>

                <TextView
                    style="@style/text_daily_forecast_bottom_right"
                    android:text="101.192kPa"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>