<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.iko.android.weather.ui.main.daily.DailyForecastViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:text="Bishkek, Kyrgyzstan"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_xxxmedium"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_country"
                        android:gravity="center"
                        android:text="SATURDAY, 18 MARCH"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@id/tv_degree"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/tv_max_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18&#xb0;"
                            android:drawableLeft="@drawable/menu_up_outline"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_small"/>

                        <TextView
                            android:id="@+id/tv_min_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14&#xb0;"
                            android:drawableLeft="@drawable/menu_down_outline"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_small"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="16"
                        android:drawableRight="@drawable/temperature_celsius"
                        android:textColor="@color/textColor"
                        android:textSize="60sp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_degree"
                        app:srcCompat="@drawable/weather_cloudy"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_above="@id/ll_title"
                        android:layout_marginLeft="20dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/water_percent"
                            android:text="0%"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/water_percent"
                            android:text="24%"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/flag_variant"
                            android:text="5mph"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/compass_outline"
                            android:text="SW"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/precipitation"
                            android:textColor="@color/brightBlue"
                            android:textSize="@dimen/text_xxxsmall"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/humidity"
                            android:gravity="center"
                            android:textColor="@color/brightBlue"
                            android:textSize="@dimen/text_xxxsmall"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wind"
                            android:gravity="center"
                            android:textColor="@color/brightBlue"
                            android:textSize="@dimen/text_xxxsmall"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/direction"
                            android:textColor="@color/brightBlue"
                            android:textSize="@dimen/text_xxxsmall"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </FrameLayout>

</layout>